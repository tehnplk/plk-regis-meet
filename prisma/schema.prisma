datasource db {
  provider = "sqlite"
  url      = "file:./events.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @map("refresh_token")
  access_token      String?  @map("access_token")
  expires_at        Int?     @map("expires_at")
  token_type        String?  @map("token_type")
  scope             String?
  id_token          String?  @map("id_token")
  session_state     String?  @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id          Int           @id @default(autoincrement())
  title       String
  date        String
  endDate     String?
  time        String
  location    String
  latitude    Float?
  longitude   Float?
  enableCheckInRadius Boolean @default(false)
  checkInRadiusMeters Int?
  registered  Int
  capacity    Int
  status      String
  description String
  docLink     String?

  participants Participant[]
}

model Participant {
  id       Int                @id @default(autoincrement())
  eventId  Int
  event    Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)

  name     String
  org      String
  position String
  email    String
  phone    String
  foodType String?
  status   String
  regDate  String
}
